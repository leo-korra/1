    <script>
        feather.replace();
        
        // Copy code functionality
        function copyCode(codeElement) {
            const code = codeElement.getAttribute('data-code');
            const tempInput = document.createElement('input');
            tempInput.value = code;
            document.body.appendChild(tempInput);
            tempInput.select();
            document.execCommand('copy');
            document.body.removeChild(tempInput);
            
            // Show notification
            const notification = document.getElementById('copyNotification');
            notification.classList.add('show');
            
            // Change code display style temporarily
            codeElement.classList.add('copied');
            
            setTimeout(() => {
                notification.classList.remove('show');
                codeElement.classList.remove('copied');
            }, 2000);
        }
        
        // Add click event to all code displays
        document.querySelectorAll('.code-display').forEach(codeDisplay => {
            codeDisplay.addEventListener('click', () => {
                copyCode(codeDisplay);
            });
        });
        
        // FAQ functionality
        document.querySelectorAll('.faq-item').forEach(item => {
            const question = item.querySelector('.faq-question');
            question.addEventListener('click', () => {
                item.classList.toggle('active');
            });
        });
        
        // Advanced animations and effects
        document.addEventListener('DOMContentLoaded', function() {
            // Create floating particles
            const particlesContainer = document.querySelector('.particles');
            for (let i = 0; i < 80; i++) {
                const particle = document.createElement('div');
                particle.style.cssText = `
                    position: absolute;
                    width: ${Math.random() * 5 + 1}px;
                    height: ${Math.random() * 5 + 1}px;
                    background: rgba(212, 175, 55, ${Math.random() * 0.5});
                    border-radius: 50%;
                    top: ${Math.random() * 100}%;
                    left: ${Math.random() * 100}%;
                    animation: floatParticle ${Math.random() * 25 + 15}s infinite ease-in-out;
                    opacity: ${Math.random() * 0.6 + 0.2};
                `;
                particlesContainer.appendChild(particle);
            }

            // Add CSS for particle animation
            const style = document.createElement('style');
            style.textContent = `
                @keyframes floatParticle {
                    0%, 100% { 
                        transform: translate(0, 0) rotate(0deg);
                        opacity: 0.2;
                    }
                    25% { 
                        transform: translate(${Math.random() * 150 - 75}px, ${Math.random() * 150 - 75}px) rotate(90deg);
                        opacity: 0.8;
                    }
                    50% { 
                        transform: translate(${Math.random() * 150 - 75}px, ${Math.random() * 150 - 75}px) rotate(180deg);
                        opacity: 0.4;
                    }
                    75% { 
                        transform: translate(${Math.random() * 150 - 75}px, ${Math.random() * 150 - 75}px) rotate(270deg);
                        opacity: 0.6;
                    }
                }
            `;
            document.head.appendChild(style);

            // Add scroll animations
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);

            // Observe all luxury cards
            document.querySelectorAll('.luxury-card, .feature-block').forEach(card => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';
                card.style.transition = 'all 0.8s cubic-bezier(0.23, 1, 0.320, 1)';
                observer.observe(card);
            });
        });
    </script>
